<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lab03_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Lab03Activity">

    <ImageButton
        android:id="@+id/lab03_back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back_button_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/back_arrow"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lab03_topleft_txtvw"
        android:layout_width="@dimen/corner_view_size"
        android:layout_height="@dimen/corner_view_size"
        android:tag="topLeft"
        android:text="@string/lab03_top_left_default_text"
        android:gravity="center"
        android:textSize="@dimen/corner_view_fontsize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lab03_topright_txtvw"
        android:layout_width="@dimen/corner_view_size"
        android:layout_height="@dimen/corner_view_size"
        android:tag="topRight"
        android:text="@string/lab03_top_right_default_text"
        android:gravity="center"
        android:textSize="@dimen/corner_view_fontsize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lab03_bottomleft_button"
        android:layout_width="@dimen/corner_view_size"
        android:layout_height="@dimen/corner_view_size"
        android:tag="bottomLeft"
        android:text="@string/lab03_bottom_left_default_text"
        android:gravity="center"
        android:textSize="@dimen/corner_view_fontsize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/lab03_bottomright_button"
        android:layout_width="@dimen/corner_view_size"
        android:layout_height="@dimen/corner_view_size"
        android:tag="botRight"
        android:text="@string/lab03_bottom_right_default_text"
        android:gravity="center"
        android:textSize="@dimen/corner_view_fontsize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/lab03_reset_clicks_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lab03_reset_clicks_button_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lab03_seekbar"
        android:layout_marginBottom="16dp" />

    <SeekBar
        android:id="@+id/lab03_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:min="5"
        android:max="100"
        android:progress="30"
        android:progressTint="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>