<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_center"
        android:layout_width="@dimen/large_button_size"
        android:layout_height="@dimen/large_button_size"
        android:background="@color/royal_blue"
        android:text="@string/centered_button_text"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_top_left_guideline"
        android:layout_width="@dimen/small_button_size"
        android:layout_height="@dimen/small_button_size"
        android:background="@color/medium_purple"
        android:text="@string/button_tl_text"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toLeftOf="@id/vertical_guideline"
        app:layout_constraintBottom_toTopOf="@id/horizontal_guideline"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_bottom_right_guideline"
        android:layout_width="@dimen/small_button_size"
        android:layout_height="@dimen/small_button_size"
        android:background="@color/spring_green"
        android:text="@string/button_br_text"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline"
        />

    <TextView
        android:id="@+id/label_layout_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/layout_two_label"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

</androidx.constraintlayout.widget.ConstraintLayout>