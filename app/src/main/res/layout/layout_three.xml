<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d4fff3">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <TextView
        android:id="@+id/greeting_textview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/medium_button_height"
        android:text="@string/top_greeting_text"
        android:gravity="center"
        android:background="@color/light_gray"
        app:layout_constraintLeft_toRightOf="@id/vertical_guideline_25"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.10" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fill_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/small_button_height"
        android:background="@color/yellow"
        android:text="@string/fill_button_text"
        app:layout_constraintLeft_toRightOf="@id/vertical_guideline_25"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greeting_textview"
        android:layout_marginTop="@dimen/guideline_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/middle_button"
        android:layout_width="@dimen/medium_button_size"
        android:layout_height="@dimen/medium_button_height"
        android:background="@color/orange"
        android:text="@string/middle_button_text"
        app:layout_constraintLeft_toRightOf="@id/vertical_guideline_25"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bottom_button"
        android:layout_width="@dimen/medium_button_size"
        android:layout_height="@dimen/medium_button_height"
        android:background="@color/navy"
        android:text="@string/bottom_button_text"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/vertical_guideline_25"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"/>


</androidx.constraintlayout.widget.ConstraintLayout>